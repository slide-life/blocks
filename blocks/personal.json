{
  "name": {
    "_description": "Name",
    "_representation": "${first} ${last}",

    "first": {
      "_description": "First name",
      "_type": "text"
    },

    "middle": {
      "_description": "Middle name",
      "_type": "text"
    },

    "last": {
      "_description": "Last name",
      "_type": "text"
    }
  },

  "profile-picture": {
    "_description": "Profile picture",
    "_type": "image"
  },

  "date-of-birth": {
    "_description": "Date of birth",
    "_type": "date",
    "_format": "dd-mm-yy"
  },

  "country-of-citizenship": {
    "_description": "Country of citizenship",
    "_inherits": "base.country"
  },

  "sex": {
    "_description": "Sex",
    "_type": "select",
    "_options": ["Male", "Female", "Other"]
  },

  "address": {
    "_representation": "${residence} ${street}, ${city}, ${state} ${zip-code}, ${country}",

    "residence": {
      "_description": "Residence name/number",
      "_type": "text"
    },

    "street": {
      "_description": "Street",
      "_type": "text"
    },

    "city": {
      "_description": "City",
      "_type": "text"
    },

    "state": {
      "_description": "State",
      "_inherits": "base.state"
    },

    "zip-code": {
      "_description": "Zip code",
      "_type": "number"
    },

    "country": {
      "_description": "Country",
      "_inherits": "base.country"
    }
  }
}
