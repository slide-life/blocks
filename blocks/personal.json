{
  "name": {
    "_representation": "${@first} ${@last}",

    "first": {
      "_description": "First name",
      "_type": "text"
    },

    "middle": {
      "_description": "Middle name",
      "_type": "text"
    },

    "last": {
      "_description": "Last name",
      "_type": "text"
    }
  },

  "profile-picture": {
    "_description": "Profile picture",
    "_type": "image"
  },

  "date-of-birth": {
    "_inherits": "base.date",
    "_description": "Date of birth"
  },

  "country-of-citizenship": {
    "_description": "Country of citizenship",
    "_inherits": "base.country"
  },

  "sex": {
    "_description": "Sex",
    "_type": "select",
    "_options": ["Male", "Female", "Other"]
  },

  "address": {
    "street-address": {
      "_description": "Street address",
      "_type": "text"
    },

    "city": {
      "_description": "City",
      "_type": "text"
    },

    "state": {
      "_description": "State",
      "_inherits": "base.state"
    },

    "zip-code": {
      "_description": "Zip code",
      "_type": "number"
    },

    "country": {
      "_description": "Country",
      "_inherits": "base.country"
    }
  }
}
