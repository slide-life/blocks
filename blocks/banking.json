{
  "bank": {
    "name": {
      "_description": "Bank name",
      "_type": "text"
    },

    "branch": {
      "_description": "Bank branch",
      "_type": "text"
    },

    "account": {
      "number": {
        "_description": "Account number",
        "_type": "number"
      },

      "routing": {
        "_description": "Routing number",
        "_type": "number",
        "_validation": "^[012346789]\\d{8}$"
      },

      "IBAN": {
        "_description": "IBAN",
        "_type": "text"
      },

      "swift-code": {
        "_description": "Swift code",
        "_type": "text",
        "_validation": "^([a-zA-Z]){4}([a-zA-Z]){2}([0-9a-zA-Z]){2}([0-9a-zA-Z]{3})?$"
      }
    },

    "card": {
      "_description": "Bank card",
      "_components": ["base.start-date", "base.expiry-date"],

      "number": {
        "_description": "Card number",
        "_type": "number",
        "_validation": "^(?:3[47]\\d|(?:4\\d|5[1-5]|65)\\d{2}|6011)\\d{12}$"
      },

      "security-code": {
        "_description": "Security code",
        "_type": "number",
        "_validation": "^\\d{3}$"
      }
    }
  }
}
