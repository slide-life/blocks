{
  "bank": {
    "account": {
      "_description": "Bank account",
      "_representation": "${name} ${number}",

      "name": {
        "_description": "Bank name",
        "_type": "text"
      },

      "branch": {
        "_description": "Bank branch",
        "_type": "text"
      },

      "number": {
        "_description": "Account number",
        "_type": "number"
      },

      "routing": {
        "_description": "Routing number",
        "_type": "number"
      },

      "IBAN": {
        "_description": "IBAN",
        "_type": "text"
      },

      "swift-code": {
        "_description": "SWIFT code",
        "_type": "text"
      }
    },

    "card": {
      "_description": "Payment card",
      "_components": ["base.issue-date", "base.expiry-date"],
      "_representation": "${number}",

      "number": {
        "_description": "Card number",
        "_type": "number"
      },

      "security-code": {
        "_description": "Security code",
        "_type": "number"
      }
    }
  }
}
