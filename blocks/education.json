{
  "university": {
    "_description": "University",
    "_representation": "${name}",

    "name": {
      "_description": "University name",
      "_type": "text"
    },

    "id": {
      "_description": "University ID number",
      "_type": "text"
    },

    "current-level": {
      "_description": "University year",
      "_type": "select",
      "_options": ["Freshman", "Sophomore", "Junior", "Senior", "Postgraduate"]
    },

    "graduation-year": {
      "_description": "Graduation year",
      "_type": "date",
      "_format": "y"
    },

    "major": {
      "_description": "Major",
      "_type": "text"
    },

    "residence": {
      "_description": "Dormitory/House",
      "_type": "text"
    }
  }
}
